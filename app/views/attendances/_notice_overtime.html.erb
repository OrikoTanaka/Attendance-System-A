<% provide(:class_text, 'notice_overtime') %>
<% provide(:button_text, '変更を送信する') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <h2 class="modal-title">【　#{@user.name}からの残業申請　】</h2>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= form_with(model: @user, url: update_notice_overtime_user_attendance_path, local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-striped table-position table-hover">
              <thead>
                <tr>
                  <td><%= "日付" %></td>
                  <td><%= "曜日" %></td>
                  <td class="col-sm-2"><%= "終了予定時間" %></td>
                  <td class="col-sm-5"><%= "業務処理内容" %></td>
                  <td><%= "指示者確認㊞" %></td>
                  <td><%= "変更" %></td>
                  <td><%= "勤怠を確認する" %></td>
                </tr>
              </thead>
              <tbody>
                <%= f.fields_for "attendances[]", @attendance do |attendance| %>
                  <tr>
                    <td><%= l(@attendance.worked_on, format: :short) %></td>
                    <td class='<%= "wday#{@attendance.worked_on.wday}"%>'>
                      <%= $days_of_the_week[@attendance.worked_on.wday] %>
                    </td>
                    <td><%= attendance.end_time, format: :time %></td>
                    <td><%= @user.designated_work_end_time, format: :time %></td>
                    <td><%= attendance.overtime_calculation %></td>
                    <td><%= attendance.overtime_reason %></td>
                    <td><%= attendance.confirmer %></td>
                    <td><%= attendance.check_box :change %></td>
                    <td><%= link_to "確認", user_path(@user, day), class: "btn btn-primary" %></td>                    
                  </tr>
                <% end %>             
              </tbody>
            </table>

            <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
          
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>